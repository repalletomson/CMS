{
  "name": "admin-cms-catalog",
  "version": "1.0.0",
  "description": "Admin CMS + Public Catalog API + Scheduled Publishing System",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "worker"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:worker\"",
    "dev:mongodb": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "demo": "concurrently \"npm run demo:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "demo:backend": "cd backend && npm run demo",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:worker": "cd worker && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm start",
    "start:worker": "cd worker && npm start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "seed": "cd backend && npm run seed",
    "setup:mongodb": "npm run seed && echo 'MongoDB setup complete! Run: npm run dev:mongodb'",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}